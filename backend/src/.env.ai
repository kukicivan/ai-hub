# ============================================
# AI DASHBOARD - ENVIRONMENT CONFIGURATION
# ============================================

# ------------------
# AI FEATURE TOGGLE
# ------------------
AI_ENABLED=true
AI_ROUTING_STRATEGY=predictive  # Options: predictive, fallback, single

# ------------------
# GROQ API (FREE TIER - RECOMMENDED)
# ------------------
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_key_here

# ------------------
# OPENAI API (PAID - OPTIONAL)
# ------------------
# Uncomment if you want to use OpenAI (better quality, costs money)
# OPENAI_API_KEY=sk-your_key_here
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_MAX_TOKENS=4000
# OPENAI_TEMPERATURE=0.3

# ------------------
# PRIMARY MODEL (for 'single' strategy)
# ------------------
AI_PRIMARY_PROVIDER=groq
AI_PRIMARY_MODEL=llama-3.1-8b-instant

# ------------------
# EMAIL ANALYSIS SETTINGS
# ------------------
AI_MAX_EMAILS_PER_BATCH=50
AI_INCLUDE_ATTACHMENTS_METADATA=true
AI_RETRY_FAILED_ANALYSIS=true
AI_MAX_RETRIES=3

# ------------------
# GOAL SYSTEM
# ------------------
GOALS_AUTO_UPDATE=false
GOALS_STORAGE_PATH=storage/app/goals

# ------------------
# CACHING
# ------------------
AI_CACHE_ENABLED=true
AI_CACHE_DRIVER=redis  # Options: redis, file, database
AI_CACHE_TTL=86400  # 24 hours

# ------------------
# COST TRACKING
# ------------------
AI_COST_TRACKING_ENABLED=true
AI_COST_ALERT_THRESHOLD=10.0  # USD

# ------------------
# DATA ANONYMIZATION
# ------------------
AI_ANONYMIZATION_ENABLED=true  # ALWAYS true for production

# ------------------
# LOGGING
# ------------------
AI_LOG_LEVEL=info  # Options: debug, info, warning, error
AI_LOG_CHANNEL=stack

# ------------------
# EXISTING LARAVEL CONFIG (don't change)
# ------------------
APP_NAME="Unified Messaging System"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=unified_messaging
DB_USERNAME=root
DB_PASSWORD=

# Redis (for caching and queue)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue
QUEUE_CONNECTION=redis

# Gmail Integration
GMAIL_APP_SCRIPT_URL=https://script.google.com/macros/s/your_script_id/exec
GMAIL_API_KEY=  # Optional

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ------------------
# PRODUCTION OVERRIDES
# ------------------
# Uncomment these for production:
# APP_ENV=production
# APP_DEBUG=false
# AI_LOG_LEVEL=warning
# AI_CACHE_DRIVER=redis
# QUEUE_CONNECTION=redis
